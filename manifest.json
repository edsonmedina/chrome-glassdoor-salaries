{
    "manifest_version": 3,
    "name": "Glassdoor salaries: Show me the money",
    "version": "1.0",
    "description": "Search Glassdoor salaries for the selected company.",
    "permissions": [
        "contextMenus",
        "scripting",
        "tabs",
        "notifications"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon16.png",
            "48": "icon48.png",
            "128": "icon128.png"
        }
    },
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    }
}